
#include <iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter size of pattern\n";
    cin>>n;
    cout<<"Flipped half diamond pattern is here.....\n";
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n-i;j++){
            cout<<" ";
        }
        for(int k=1;k<=i;k++){
            cout<<"*";
        }
        cout<<"\n";
       
    }
    for(int i=1;i<=n-1;i++){
        for(int j=1;j<=i;j++){
            cout<<" ";
        }
        for(int k=1;k<=n-i;k++){
            cout<<"*";
        }
        cout<<"\n";
    }

    return 0;
}
