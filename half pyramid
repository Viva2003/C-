
#include <iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter size "<<endl;
    cin>>n;
    cout<<"Half pyramid pattern is here ...."<<endl;
    
 for (int i=1;i<=n;i++){
     for(int j=1;j<=i;j++){
             cout<<"*\t";  
         }
          cout<<endl;
     }
    
  return 0;
}
