
#include <iostream>
using namespace std;
int main() {
    int a[]={1,3,5,7};
    cout<<"The relation between array and pointer\n";
    cout<<endl;
    cout<<"The given array is:";
    for(int i=0;i<sizeof(a)/sizeof(a[0]);i++){
        cout<<a[i]<<" ";
    }
    cout<<"\n";
    cout<<"The memory address of array is:"<<&a<<"\n";
    int* ptr=a;//defining pointer
    cout<<"The memory address of array using pointer is:"<<ptr<<"\n";
    cout<<endl;
    cout<<"Printing array elements  using pointers rather than indexing\n";
    cout<<"1st element is:"<<*a<<endl;
    cout<<"2nd element is:"<<*(a+1)<<endl;
    cout<<"3rd element is:"<<*(a+2)<<endl;
    cout<<"4th element is:"<<*(a+3)<<endl;
    
    return 0;
}
