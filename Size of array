
#include <iostream>
using namespace std;
int main() {
    int a,b,c;
   cout<<"Here is the program to find a Size of array\n";
   cout<<endl;
   int arr[6]={10,20,30,40,50};
   cout<<"The given array is :";
   for(int i=0;i<5;i++){
       cout<<arr[i]<<" ";
   }
   cout<<"\n";
   a=sizeof(arr[3]);
   cout<<"The size of element 30 is :"<<a<<"\n";
   b=sizeof(arr);\
   cout<<"The size of Array is :"<<b<<"\n";
   c=sizeof(arr)/sizeof(arr[0]);
   cout<<"The length of the array is :"<<c<<"\n";
    return 0;
}
