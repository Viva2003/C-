
#include <iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter size of pattern\n";
    cin>>n;
    cout<<"Triangle pattern is here.....\n";
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n-i;j++){
            cout<<" ";
        }    
            for(int j=1;j<=i;j++){
                cout<<"*";
                if(j<i){
                    cout<<" ";
                }
            }
    cout<<"\n";        
                
    }

    return 0;
}
